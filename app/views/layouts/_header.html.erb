<div class="header">
  <div class="navbar navbar">
    <div class="container" style="margin-left: 350px;">
    <div class="nav navbar-nav navbar-header">
      <%= link_to "Mangak", root_path, id: "logo" %>
    </div>
    <ul class="nav navbar-nav navbar-right" style="font-size: 120%">
      <li class="active"><%= link_to "Home", root_path %></li>
      <% if user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            User
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Edit", edit_user_registration_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
    </ul>
    </div>
  </div>
  <div class="topnav">
    <%= link_to t(".manga"), root_path %>
    <%= link_to t("manga_list"), mangaks_path %>
    <%= link_to t("manga_hot"), mangak_hot_path %>
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag mangaks_path, method: :get do %>
      <%= text_field_tag :search, params[:search_manga], class: "form-control", placeholder: "Search name manga....." %>
    </div>
    <% end %>
  </div>
</div>
