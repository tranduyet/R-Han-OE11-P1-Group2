<div class="header">
  <div class="navbar navbar">
    <div class="container">
    <div class="nav navbar-nav navbar-header">
      <%= link_to t(".mangak"), root_path, id: "logo" %>
    </div>
    <ul class="nav navbar-nav navbar-right" style="font-size: 120%">
      <li class="active"><%= link_to t(".home"), root_path %></li>
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li class="upload"><%= link_to t(".upload"), new_mangak_path %></li>
        <% end %>
        <li><%= link_to t(".users"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user %></li>
            <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".log_in"), login_path %></li>
      <% end %>
    </ul>
    </div>
  </div>
  <div class="topnav">
    <%= link_to t(".manga"), root_path %>
    <%= link_to t("manga_list"), mangaks_path(@mangaks) %>
    <%= link_to t("manga_hot"), mangak_hot_path %>
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag mangaks_path, method: :get do %>
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search name manga....." %>
    </div>
    <% end %>
  </div>
</div>
