<% provide :title, t(".new_author") %>
<h1><%= t ".new_author" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@author) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label t(".author_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t(".create") %>
    <% end %>
  </div>
</div>
