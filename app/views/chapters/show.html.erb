<div class="chapter">
  <p class="col-md-1 col-md-offset-2"><%= link_to "Previous", "#" %></p>
  <p class="col-md-1 col-md-offset-7"><%= link_to "Next", "#" %></p>
</div>
<div class="col-md-4 col-md-offset-5">
<p class="name_chapter" style="color: green; margin-bottom: 30px;font-size: 120% ">
  <strong>Name chapter:</strong>
  <%= @chapter.name_chapter %>
</p>
</div>
<div class="col-md-4 col-md-offset-2">
  <% @images.each do |p| %>
  <%= image_tag p.image_url, style: "width: 700px; height: 700px" %>
  <% end %>
</div>
