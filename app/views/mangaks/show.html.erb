<br>
<div class="col-md-1 col-md-offset-1">
  <%= image_tag @mangak.picture.url, size: 210 %>
</div>
<div class="col-md-4 col-md-offset-3">
  <span style="color: green; font-size: 200%">Name manga: <%= @mangak.name %></span>
  <br>
  <span style="color: green; font-size: 200%">Author: <%= link_to @mangak.author.name, author_path %></span>
  <br>
  <span style="color: green; font-size: 200%">Genre: <%= link_to @mangak.genre.name, genre_path %></span>
</div>
<% if logged_in? %>
  <% if current_user.admin? %>
  <div class="col-8">
    <div class="button"><%= link_to "New chapter", new_mangak_chapter_path(@mangak,@chapter) %></div>
  <% end %>
  <%= render "follow_form" %>
<% end %>
    </div>
  </div>
</div>
<br>
<div class="col-md-6 col-md-offset-3">
  <div>
    <p id="rcorners2" style="margin-bottom: 20px ">
      Description: <%= @mangak.description %>
    </p>
  </div>
  <div data-spy="scroll" data-target="#myScrollspy" data-offset="10"
    style="height:200px;overflow-y: scroll;padding:5px; border: 1px solid #ccc">
  <ul class="users">
    <li class="list" style="color:green;font-size: 120%">List chapter</li>
    <% @mangak.chapters.each do |chapter| %>
    <li>
      <%= link_to chapter.name_chapter, mangak_chapter_path(chapter.mangak, chapter) %>
    </li>
  <% end %>
</ul>
</div>
