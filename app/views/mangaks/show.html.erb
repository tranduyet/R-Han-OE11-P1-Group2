<br>
<div class="col-md-1 col-md-offset-1">
  <%= image_tag @mangak.picture.url, size: 210 %>
</div>
<div class="col-md-4 col-md-offset-3">
  <span style="color: green; font-size: 200%"><%= t ".name_manga" %>
  <%= @mangak.name %></span>
  <br>
  <span style="color: green; font-size: 200%"><%= t ".author" %>
  <%= link_to @mangak.author.name, @mangak.author %></span>
  <br>
  <span style="color: green; font-size: 200%"><%= t ".genre" %>
  <%= link_to @mangak.genre.name, @mangak.genre %>
  </span>
</div>
<% if logged_in? %>
  <% if current_user.admin? %>
  <div class="col-8">
    <div class="button"><%= link_to t(".new_chapter"), new_mangak_chapter_path(@mangak,@chapter) %></div>
  <% end %>
  <%= render "follow_form" %>
<% end %>
    </div>
  </div>
</div>
<br>
<div class="col-md-6 col-md-offset-3">
  <div>
    <p id="rcorners2" style="margin-bottom: 20px "><strong>
      <%= t ".description" %></strong> <%= @mangak.description %>
    </p>
  </div>
  <div data-spy="scroll" data-target="#myScrollspy" data-offset="10"
    style="height:200px;overflow-y: scroll;padding:5px; border: 1px solid #ccc">
  <ul class="chapters">
    <li class="list" style="color:green;font-size: 120%"><%= t ".list chapter" %></li>
    <% @mangak.chapters.each do |chapter| %>
    <li>
      <%= link_to chapter.name_chapter, mangak_chapter_path(chapter.mangak, chapter) %>
    </li>
  <% end %>
  </ul>
</div>
<div class="comment">
  <div class="container" style="margin-top: 20px ">
    <aside class="col-md-12">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="comment_form" style="margin-top: -20px ">
        <%= render "shared/comment_form" %>
      </section>
    </aside>
  </div>
  </div>
  <div class="show_comment">
    <% if @user.comments.any? %>
      <h3>comments (<%= @mangak.comments.count %>)</h3>
      <ul class="comments">
        <% @comments.each do |comment| %>
          <li id="comment-<%= comment.id %>">
            <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
            <span class="user"><%= link_to comment.user.name, comment.user %></span>
            <span class="content"><%= comment.content %></span>
            <span class="timestamp">
            <%= t ".posted" %> <%= time_ago_in_words(comment.created_at) %> <%= t ".ago" %>
            <% if current_user?(comment.user) || current_user.admin? %>
              <%= link_to t(".delete"), comment, method: :delete,
                data: {confirm: t(".sure")} %>
              <% end %>
            </span>
          </li>
      <% end %>
    <% end %>
    </ul>
  </div>
