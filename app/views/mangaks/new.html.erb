<% provide :title, "Upload manga" %>
<h1><%= "Upload manga" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mangak) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label "Name manga" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label "Author" %>
      <%= f.select :author_id, options_from_collection_for_select(Author.all, :id, :name)  %>
      <%= link_to "(New author)", new_author_path %>
      <br>
      <br>
      <%= f.label "Genre" %>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name)  %>
      <div class="field">
        <%= f.label "Description" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <span class="picture">
      <%= f.label "Avatar" %>
      <%= f.file_field :picture %>
      </span>

      <%= f.submit "create" %>
    <% end %>
  </div>
</div>
