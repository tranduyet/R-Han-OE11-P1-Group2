<% provide :title, t(".list_manga") %>
<h1><%= t ".list_manga" %></h1>
<% if @mangaks.any? %>
<ul class="users">
  <% @mangaks.each do |mangak| %>
    <li>
    <div class="popular-title">
      <%= image_tag mangak.picture.url, size: 60 %>
      <strong><%= link_to mangak.name, mangak %></strong><br>
      <% if user_signed_in? && current_user.admin? %>
    |   <%= link_to t(".delete"), mangak, method: :delete, data: {confirm: t(".sure")} %>
     | <%= link_to "New chapter", new_mangak_chapter_path(mangak, mangak.chapters) %><br>
      <% end %>
      View: <%= mangak.impressionist_count %>
      </div>
    </li>
  <% end %>
<% else %>
<p style="font-size: 120%; text-align: center"><%= t ".no_result" %></p>
<% end %>
</ul>
<%= will_paginate @users, theme: "twitter-bootstrap-3" %>
